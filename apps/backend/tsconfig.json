{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~/shared": ["../../packages/shared/src"],
      "~/shared/*": ["../../packages/shared/src/*"]
    },
    "rootDir": ".",
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2020",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src", "kysely.config.ts"],
  "references": [
    {
      "path": "../../packages/shared"
    }
  ]
}
